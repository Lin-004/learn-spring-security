<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.login.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.lin.login.pojo.Role">
            <id property="id" column="id" />
            <result property="name" column="name" />
    </resultMap>

    <sql id="Base_Column_List">
        id,name
    </sql>
    <select id="selectByUserId" resultType="com.lin.login.pojo.Role">
        select r.id, r.name from user u
                                     join role_user ru on u.id=ru.uid
                                     join role r on ru.rid=r.id
        where u.id=#{userId};
    </select>
</mapper>
